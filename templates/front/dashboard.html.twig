{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-primary text-center mb-4">üìö Dashboard de {{ user.email }}</h1>

    {% if themes is defined and themes|length > 0 %}
        {% for theme in themes %}
            <h2 class="mt-4">{{ theme.name }}</h2>

            {% if theme.courses|length > 0 %}
                <div class="row g-3">
                    {% for course in theme.courses %}
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <h5 class="card-title">{{ course.title }}</h5>
                                    <p class="card-text"><strong>Prix :</strong> {{ course.price }} ‚Ç¨</p>
                                    <a href="{{ path('front_course_purchase', {'id': course.id}) }}" class="btn btn-primary w-100 mt-3">
                                        Acheter le cours
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info text-center">
                    Aucun cours disponible pour ce th√®me.
                </div>
            {% endif %}
        {% endfor %}
    {% else %}
        <div class="alert alert-info text-center">
            Aucun th√®me disponible pour le moment.
        </div>
    {% endif %}

    <div class="mt-4 text-center">
        <a href="{{ path('front_themes') }}" class="btn btn-secondary">‚Üê Retour aux th√®mes</a>
    </div>
</div>
{% endblock %}