{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-primary text-center mb-4">üìö Dashboard de {{ user.email }}</h1>

    {% set hasPurchasedCourses = false %}

    {% if themes is defined and themes|length > 0 %}
        {% for theme in themes %}
            {% set accessibleCourses = theme.accessibleCourses|default([]) %}
            
            {% set purchasedCourses = accessibleCourses|filter(c => c.hasAccess) %}
            
            {% if purchasedCourses|length > 0 %}
                {% set hasPurchasedCourses = true %}
                <h2 class="mt-4">{{ theme.name }}</h2>
                <div class="row g-3">
                    {% for courseWrapper in purchasedCourses %}
                        {% set course = courseWrapper.entity %}
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <h5 class="card-title">{{ course.title }}</h5>
                                    <p class="card-text"><strong>Prix :</strong> {{ course.price }} ‚Ç¨</p>
                                    <a href="{{ path('front_course_show', {'id': course.id}) }}" class="btn btn-success w-100 mt-3">
                                        Voir les le√ßons
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}

    {% if not hasPurchasedCourses %}
        <div class="alert alert-info text-center mt-2">
            Vous n'avez encore achet√© aucun cours.
        </div>
    {% endif %}

    <div class="mt-4 text-center">
        <a href="{{ path('front_themes') }}" class="btn btn-secondary">‚Üê Retour aux th√®mes</a>
        <a href="{{ path('front_certifications') }}" class="btn btn-success ms-2">üèÜ Mes Certifications</a>
    </div>
</div>
{% endblock %}
