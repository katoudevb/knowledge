{% extends 'base.html.twig' %}

{% block title %}
    Cours : {{ course.title }}
{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-primary text-center mb-4">üìö Cours : {{ course.title }}</h1>

    {# Assure que les variables existent pour √©viter les erreurs Twig #}
    {% set purchasedLessonIdsByCourse = purchasedLessonIdsByCourse|default({}) %}
    {% set purchasedCourses = purchasedCourses|default([]) %}
    {% set isCoursePurchased = course.id in purchasedCourses %}

    <div class="row g-3">
        {% for lesson in course.lessons %}
            {% set hasLessonAccess = lesson.id in purchasedLessonIdsByCourse[course.id]|default([]) %}

            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">{{ lesson.title }}</h5>

                        {% if hasLessonAccess or isCoursePurchased %}
                            <a href="{{ path('front_lesson_show', {'id': lesson.id}) }}" class="btn btn-success w-100 mb-2">
                                Consulter la le√ßon
                            </a>
                        {% else %}
                            <form class="stripe-form" action="{{ path('stripe_checkout_lesson', {'id': lesson.id}) }}" method="POST">
                                <button type="submit" class="btn btn-primary w-100">
                                    Acheter la le√ßon - {{ lesson.price }} ‚Ç¨
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# Supprime le bouton ‚ÄúAcc√©der au cours complet‚Äù #}
    {% if not isCoursePurchased %}
        <div class="text-center mt-4">
            <form class="stripe-form" action="{{ path('stripe_checkout_course', {'id': course.id}) }}" method="POST">
                <button type="submit" class="btn btn-secondary w-50">
                    Acheter le cours complet - {{ course.price }} ‚Ç¨
                </button>
            </form>
        </div>
    {% endif %}

    <div class="text-center mt-4">
        <a href="{{ path('front_dashboard') }}" class="btn btn-secondary">‚Üê Retour au tableau de bord</a>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const stripe = Stripe("{{ stripePublicKey|default('') }}");
    document.querySelectorAll('.stripe-form').forEach(form => {
        form.addEventListener('submit', async e => {
            e.preventDefault();
            try {
                const res = await fetch(form.action, { 
                    method: 'POST', 
                    headers: { 'X-Requested-With': 'XMLHttpRequest' } 
                });
                const data = await res.json();
                if (data.id) {
                    await stripe.redirectToCheckout({ sessionId: data.id });
                } else if (data.error) {
                    alert(data.error);
                } else {
                    alert("Erreur inconnue lors de la cr√©ation de la session Stripe.");
                }
            } catch(err) {
                console.error(err);
                alert("Erreur lors de la communication avec le serveur.");
            }
        });
    });
});
</script>
{% endblock %}
